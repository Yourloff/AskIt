<%= tag.article class: 'mb-3', id: dom_id(answer) do %>
  <time datetime="<%= answer.formatted_created_at %>">
    <small class="text-muted"><%= answer.formatted_created_at %></small>
  </time>

  <div class="my-2">
    <%= sanitize answer.body %>
  </div>

  <%= link_to t('.edit'), edit_question_answer_path(question, answer), class: 'btn btn-secondary btn-sm' %>
  <%= button_to t('.delete'), question_answer_path(question, answer), class: 'btn btn-danger btn-sm', method: :delete, form: { data: { 'turbo-confirm': t('.are_you_sure') } } %>
<% end %>
