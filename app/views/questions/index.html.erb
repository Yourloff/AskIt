<% provide :page_title, t('.title') %>
<%= currently_at t '.title' %>

<h1 class="mb-4"><%= t '.title' %></h1>

<%= pagination(@pagy) %>

<%= link_to t('.new_question'), new_question_path, class: 'btn btn-primary btn-lg' %>
<% @questions.each do |question| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h4>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <div class="my-2">
          <%= truncate strip_tags(question.body), length: 150, omission: "... (#{t '.continued'})" %>
        </div>
      </section>

      <%= link_to t('.show'), question_path(question), class: 'btn btn-primary' %>
      <%= link_to t('.edit'), edit_question_path(question), class: 'btn btn-secondary' %>
      <%= button_to t('.destroy'), question, class: 'btn btn-danger', method: :delete, form: { data: { 'turbo-confirm': "#{t('.are_you_sure')}" } } %>
    </div>
  </article>
<% end %>

<div class="mt-3"><%= pagination(@pagy) %></div>
