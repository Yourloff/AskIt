<% provide :page_title, @question.title %>
<% currently_at 'Questions' %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
            data: { method: :delete, confirm: 'Are you sure?' } %>

<hr class="my-3">
<h2>Write your answer</h2>

<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer], data: { turbo: false } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 co-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Submit answer', class: 'btn btn-primary' %>
<% end %>

<hr class="my-3">

<h2>Answers</h2>

<% @answers.each do |answer| %>
  <article class="mb-3">
    <time datetime="<%= answer.formatted_created_at %>">
      <small><%= answer.formatted_created_at %></small>
    </time>

    <p>
      <%= answer.body %>
    </p>

    <%= link_to 'Edit', edit_question_answer_path(@question, answer), class: 'btn btn-secondary btn-sm' %>
    <%= button_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm', method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } } %>
  </article>
<% end %>
